.container{
  margin-bottom: 100rpx;
  background-color: #fff;
}
swiper{
  width: 100%;
  height: 350rpx;
}
swiper-item image{
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
  position: absolute;
  bottom: 20rpx;
  left: auto;
  right: 20rpx;
  margin: 0;
}
.room-code{
  position: absolute;
  top: 290rpx;
  left: 40rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #fff;
  font-weight: lighter;
}
.room-detail{
  width:100%;
  box-sizing: border-box;
  padding: 40rpx;
  font-size: 30rpx;
  overflow: hidden;
}
.room-title{
  width: 100%;
  overflow: hidden;
}
.room-address{
  width: 550rpx;
  display: block;
  line-height: 50rpx;
  word-break: break-all;
  word-wrap: break-word;
  float: left;
  overflow:hidden;
}
.room-path{
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  border-radius: 30rpx;
  border: #4a4c5c solid 2rpx;
  text-align: center;
  float: right;
}
.base-info{
  height: 30rpx;
  margin: 40rpx 0;
  line-height: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.base-info text{
  width: 25%;
  line-height: 30rpx;
  display: inline-block;
  border-left: #a6a6a6 solid 1rpx;
  box-sizing: border-box;
  color: #a6a6a6;
  text-align: center;
}
.base-info text:last-child{
  border-right: #a6a6a6 solid 1rpx; 
}
.room-set{
  margin: 40rpx -10rpx;
  overflow: hidden;
}
.set-list{
  width: 152rpx;
  height: 110rpx;
  border: #a6a6a6 solid 1rpx;
  margin: 10rpx;
  float: left;
  position: relative;
  box-sizing: border-box;
  border-radius: 10rpx;
  overflow: hidden;
}
.set-list image{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  overflow: hidden;
}
.price-group{
  margin: 40rpx 0;
  overflow: hidden;
}
.des-group{
  margin: 40rpx 0;
  overflow: hidden;
}
.des-group text{
  display: block;
  margin-bottom: 10rpx;
  line-height: 40rpx;
}
.bottom-btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  text-align: center;
  font-size: 36rpx;
  background-color: #4a4c5c;
  color: #FFF;
  font-weight: lighter;
  position: fixed;
  bottom: 0;
  left: 0;
}