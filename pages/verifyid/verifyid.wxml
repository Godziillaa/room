<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="item-wrap">
      <view class="item-list">
        <input name="uname" maxlength="6" placeholder="输入姓名" />
      </view>
      <view class="item-list">
        <input name="uid" maxlength="18" placeholder="输入身份证号" />
      </view>
    </view>
    <view class="btn-area text-center">
      <button class="btn btn-common" formType="submit">Submit</button>
    </view>
  </form>
</view>
