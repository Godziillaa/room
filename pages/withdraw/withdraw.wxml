<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="item-wrap">
      <view class="item-list">
        <input name="phonenumber" maxlength="11" placeholder="请输入手机号码" value="131****668863" readonly="readonly"/>
      </view>
      <view class="item-list">
        <input name="vcode" maxlength="6" placeholder="请输入验证码" />
        <text class="re-vcode text-blue" bindtap="requestVcode">获取验证码</text>
      </view>
      <view class="item-list">
        <input password="true" name="password" maxlength="16" placeholder="请请输入密码" />
      </view>
    </view>
    <view class="btn-area text-center">
      <button class="btn btn-common" formType="submit">提交申请</button>
      <text class="text-gray">押金原渠道返回(1~3个工作日)</text>
    </view>
  </form>
</view>
